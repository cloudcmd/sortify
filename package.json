{
  "name": "@cloudcmd/sortify",
  "version": "1.0.0",
  "author": "coderaiser <mnemonic.enemy@gmail.com> (https://github.com/coderaiser)",
  "description": "Sort directory content by name, size, date",
  "homepage": "http://github.com/cloudcmd/sortify",
  "repository": {
    "type": "git",
    "url": "git://github.com/cloudcmd/sortify.git"
  },
  "scripts": {
    "lint": "redrun lint:*",
    "lint:eslint:lib": "eslint lib",
    "lint:eslint:test": "eslint -c .eslintrc.test test --no-eslintrc",
    "report": "nyc report --reporter=text-lcov | coveralls",
    "coverage": "nyc npm test",
    "test": "tape test/*.js",
    "watch:coverage": "npm run watcher -- npm run coverage",
    "watch:test": "npm run watcher -- npm test",
    "watcher": "nodemon -w test -w lib --exec",
    "build": "babel lib/sortify.js -o legacy/index.js",
    "legacy": "mkdirp legacy",
    "wisdom": "redrun legacy build"
  },
  "dependencies": {},
  "keywords": [
    "sort",
    "file",
    "directory",
    "size",
    "name",
    "date"
  ],
  "license": "MIT",
  "main": "lib/sortify.js",
  "engines": {
    "node": ">=8.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.38",
    "@babel/core": "^7.0.0-beta.38",
    "@babel/preset-env": "^7.0.0-beta.38",
    "coveralls": "^3.0.0",
    "eslint": "^5.6.1",
    "eslint-plugin-node": "^7.0.1",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.11.0",
    "nyc": "^11.0.2",
    "redrun": "^6.0.0",
    "tape": "^4.2.1"
  }
}
